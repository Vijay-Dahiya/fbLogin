<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:layout_height="50dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#0583EA"
        android:id="@+id/topView"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/vector"
        app:layout_constraintBottom_toBottomOf="@+id/topView"
        android:paddingLeft="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/topView"
        android:text="Login"
        android:textColor="#ffffff"
        android:layout_marginLeft="80dp"
        android:textSize="25sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/topView"
        android:layout_marginTop="60dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="20dp"
        android:hint="Email"
        android:padding="15dp"
        android:id="@+id/email"
        />
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:layout_marginTop="50dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="20dp"
        android:hint="Password"
        android:padding="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        android:text="USE PHONE NUMBER"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        android:textColor="#0583EA"
        android:id="@+id/phone"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="60dp"
        android:background="#858992"
        android:text="Login"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:id="@+id/login"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login"
        android:text="forget password?"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/google"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="CONTINUE WITH GOOGLE"
        android:drawablePadding="36dp"
        android:padding="20dp"
        android:textSize="15sp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="20dp"
        android:drawableLeft="@drawable/flat_color_icons_google"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/google"
        app:layout_constraintStart_toStartOf="parent"
        android:text="CONTINUE WITH FACEBOOK"
        android:drawablePadding="36dp"
        android:layout_marginBottom="30dp"
        android:padding="20dp"
        android:textSize="15sp"
        android:layout_marginStart="40dp"
        android:background="#3B5998"
        android:textColor="#ffffff"
        android:layout_marginEnd="20dp"
        android:drawableStart="@drawable/ion_logo_facebook"
        />





</androidx.constraintlayout.widget.ConstraintLayout>